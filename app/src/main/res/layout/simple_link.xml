<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/link"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/content_margin_half"
    android:layout_marginTop="@dimen/content_margin_half"
    android:layout_marginRight="@dimen/content_margin_half"
    android:background="@drawable/link_borders"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/link_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/link_borders_stroke"
        android:layout_marginTop="@dimen/link_borders_stroke"
        android:layout_marginRight="@dimen/link_borders_stroke"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/link_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_margin_half"
        android:layout_marginTop="@dimen/content_margin_half"
        android:layout_marginRight="@dimen/content_margin_half"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

    <TextView
        android:id="@+id/link_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_margin_half"
        android:layout_marginRight="@dimen/content_margin_half"
        android:layout_marginBottom="@dimen/content_margin_half"
        android:ellipsize="end"
        android:singleLine="true" />
</LinearLayout>